{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 580,
    "height": 500,
    "title": "Correlation Between Cases and Deaths",
    "data": {
      "url": "https://raw.githubusercontent.com/nathanwsoe/Assignment-2/main/data/cases_and_deaths_cleaned.csv"
    },
    "params": [
      {
        "name": "population_above",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 100000000,
          "step": 1000000,
          "name": "Minimum Population: "
        }
      },
      {
        "name": "continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "labels":[
            "Show All",
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "name": "Continent Selection: "
        }
      },
      {
      "name": "grid",
      "select": "interval",
      "bind": "scales"
      },
      {
      "name": "continent_highlight",
      "select": {"type": "point", "fields": ["continent"]},
      "bind": "legend"
      }
    ],
    "transform": [
      {"filter": "datum.total_cases > 0"},
      {"filter": "datum.total_deaths > 0"},
      {"filter": "datum.population > population_above"},
      {"filter": "continent_selection == null || datum.continent == continent_selection"},
        {
          "calculate": "datum.total_cases_per_million / 10",
          "as": "Total Cases (per 100,000 population)"
        },
        {
          "calculate": "datum.total_deaths_per_million / 10",
          "as": "Total Deaths (per 100,000 population)"
        }
    ],
    "encoding": {
      "x": {
        "field": "total_cases",
        "type": "quantitative",
        "axis": {"tickCount": 8},
        "scale": {"type": "log", "domain": [1, 100000000]},
        "title": "Total Cases"
      },
      "y": {
        "field": "total_deaths",
        "type": "quantitative",
        "axis": {"tickCount": 6},
        "scale": {"type": "log", "domain": [1, 1000000]},
        "title": "Total Deaths"
      }
    },
    "layer": [
      {
        "mark": {
        "type": "circle"
        },
        "encoding": {
          "size": {
            "field": "population",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
              "range": [50, 120, 200, 300, 400, 500]
            },
            "legend": {"format": ".1s"},
            "title": "Population"
          },
          "color": {
            "field": "continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#89d3df",
                "#377eb8",
                "#a65628"
              ]
            },
            "title": "Continent"
          },
          "opacity": {
            "condition": {"param": "continent_highlight", "value": 0.7},
            "value": 0.1
          },
          "tooltip": [
            {"field": "location", "type": "nominal", "title": "Country"},
            {"field": "continent", "type": "nominal", "title": "Continent"},
            {"field": "total_cases", "type": "quantitative", "format": ",.2f", "title": "Total Cases"},
            {"field": "Total Cases (per 100,000 population)", "type": "quantitative", "format": ",.2f"},
            {"field": "total_deaths", "type": "quantitative", "format": ",.2f", "title": "Total Deaths"},
            {"field": "Total Deaths (per 100,000 population)", "type": "quantitative", "format": ",.2f"}
          ]
        }
      }
    ],
      "config": {
          "background": "#eaf6ff"
        }
  }
